{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <div class="container mt-5">
        <h1 class="text-center m-5">Liste du personnel</h1>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="m-3">
                <tr class="text-center">
                    <th>Email</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Photo</th>
                    <th>Service</th>
                    <th>Type de contrat</th>
                    <th>Date de fin de contrat</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr class="text-center">
                        <td>{{ user.email }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>
                            {% if user.picture %}
                                <img class="img-thumbnail" src="{{ asset('uploads/user/' ~ user.picture) }}" alt="affiche {{ user.name }}" style="max-height: 100px;" width="150px">
                            {% else %}
                                <img class="img-thumbnail" src="{{ asset('uploads/user/No-image.png') }}" alt="Image par défaut" style="max-height: 100px;" width="150px">
                            {% endif %}
                        </td>
                        <td>{{ user.area }}</td>
                        <td>{{ user.contractType }}</td>
                        <td>{{ user.exitDate ? user.exitDate|date('d/m/Y') : '' }}</td>
                        <td>
                            <a class="btn btn-outline-success" href="{{ path('app_user_show', {'id': user.id}) }}">Voir la fiche</a>
                            {% if app.user is not null and is_granted('ROLE_RH') %}
                                <a class="btn btn-outline-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Mettre à jour</a>
                                <a class="btn btn-outline-danger" href="{{ path('app_user_delete', {'id': user.id}) }}">Supprimer</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% if app.user is not null and is_granted('ROLE_RH') %}
        <div class="container mt-3">
            <a class="btn btn-primary" href="{{ path('app_user_new') }}">Ajouter un salarié</a>
        </div>
    {% endif %}
{% endblock %}
